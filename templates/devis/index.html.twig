{% extends 'base.html.twig' %}

{% block title %}Devis index{% endblock %}

{% block body %}
    <h1>Devis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Entreprise</th>
                <th>Budget</th>
                <th>Delais</th>
                <th>Description</th>
                <th>Document</th>
                <th>Filiale</th>
                <th>Services</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for devi in devis %}
            <tr>
                <td>{{ devi.id }}</td>
                <td>{{ devi.fullName }}</td>
                <td>{{ devi.telephone }}</td>
                <td>{{ devi.email }}</td>
                <td>{{ devi.entreprise }}</td>
                <td>{{ devi.budget }}</td>
                <td>{{ devi.delais }}</td>
                <td>{{ devi.description }}</td>
                <td>{{ devi.document }}</td>
                <td>{{ devi.filiale }}</td>
                <td>{{ devi.services }}</td>
                <td>
                    <a href="{{ path('app_devis_show', {'id': devi.id}) }}">show</a>
                    <a href="{{ path('app_devis_edit', {'id': devi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_devis_new') }}">Create new</a>
{% endblock %}
