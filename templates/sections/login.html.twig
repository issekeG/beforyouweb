<section id="contact" class="contact section pb-0">
    <div class="container section-title" data-aos="fade-up">
        <h2>Connexion</h2>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center align-items-center">

            <div class="col-lg-6 info-item d-flex flex-column justify-content-center align-items-center" data-aos="fade-up" data-aos-delay="200">

                <form method="post" class="gy-4 px-5">
                    <div class="row gy-4">
                    {% if error %}
                        <small class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</small>
                    {% endif %}

                    {% if app.user %}
                        <small class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </small>
                    {% endif %}
                        <div class="col-md-12">
                            <label for="username" class="my-2">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control py-2" autocomplete="email" required autofocus>
                        </div>
                        <div class="col-md-12">
                            <label for="password" class="my-2">Password</label>
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password py-2" required>
                        </div>
                        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                    </div>
                    <div class="col-8 my-4">
                        <button class="btn btn-lg btn-primary" type="submit">
                            S'authentifier
                        </button>
                    </div>
                </form>

            </div>

            <!-- End Contact Form -->

        </div>

    </div>

</section>
