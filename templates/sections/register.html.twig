<section id="contact" class="contact section pb-0">
    <div class="container section-title" data-aos="fade-up">
        <h2>Inscription</h2>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center align-items-center">

            <div class="col-lg-6 info-item d-flex flex-column justify-content-center align-items-center" data-aos="fade-up" data-aos-delay="200">

                {{ form_start(registrationForm, {
                    attr: {
                        class: 'php-email-form',
                        'data-aos': 'fade-up',
                        'data-aos-delay': '500'
                    }
                }) }}

                <div class="row gy-4">

                    {{ form_errors(registrationForm) }}

                    <!-- Prénom -->
                    <div class="col-md-6">
                        <label for="{{ registrationForm.firstname.vars.id }}" class="form-label">
                            Prénom <span class="text-danger">*</span>
                        </label>
                        {{ form_widget(registrationForm.firstname, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez votre prénom' } }) }}
                        {{ form_errors(registrationForm.firstname) }}
                    </div>

                    <!-- Nom -->
                    <div class="col-md-6">
                        <label for="{{ registrationForm.lastname.vars.id }}" class="form-label">
                            Nom <span class="text-danger">*</span>
                        </label>
                        {{ form_widget(registrationForm.lastname, { 'attr': { 'class': 'form-control', 'placeholder': 'Entrez votre nom' } }) }}
                        {{ form_errors(registrationForm.lastname) }}
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label for="{{ registrationForm.email.vars.id }}" class="form-label">
                            Email <span class="text-danger">*</span>
                        </label>
                        {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control', 'placeholder': 'exemple@mail.com' } }) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <!-- Mot de passe -->
                    <div class="col-md-6">
                        <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">
                            Mot de passe <span class="text-danger">*</span>
                        </label>
                        {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-control', 'placeholder': 'Votre mot de passe' } }) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <!-- Bouton -->
                    <div class="col-md-12 text-center">
                        <div class="loading">Chargement...</div>
                        <div class="error-message"></div>
                        <button type="submit" class="btn btn-primary px-4 rounded-pill mt-3">
                            S'inscrire
                        </button>
                    </div>

                </div>

                {{ form_end(registrationForm) }}

            </div>

            <!-- End Contact Form -->

        </div>

    </div>

</section>
