

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                <li data-filter="*" class="filter-active">TOUT</li>
                {% for category in categories %}
                    <li data-filter=".{{ category }}">{{ category }}</li>
                {% endfor %}
            </ul><!-- End Portfolio Filters -->

            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

                {% for realisation in realisations %}
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item {{ realisation.category }}">
                        <div class="portfolio-content h-100">
                            <img
                                src="{{ asset('upload/images/realisation/' ~ realisation.realisationImages[0].url)
                                | imagine_filter('thumbnail_realisation') }}"
                                class="img-fluid"
                                alt="{{ realisation.title }}"
                            >
                            <div class="portfolio-info">
                                <h4>{{ realisation.category }}</h4>
                                <a href="{{ asset('upload/images/realisation/' ~ realisation.realisationImages[0].url) }}" title="{{ realisation.title }}" data-gallery="portfolio-gallery-app" class="glightbox preview-link">
                                    <i class="bi bi-zoom-in"></i>
                                </a>
                                <a href="{{ path('app_realisations_detail', {'slug':realisation.slug}) }}" title="DÃ©tails" class="details-link">
                                    <i class="bi bi-link-45deg"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
            <!-- End Portfolio Container -->

        </div>


