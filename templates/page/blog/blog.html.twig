{% extends 'base.html.twig' %}

{% block header %}

    {% include 'navigation/header-on-page.html.twig' %}
{% endblock %}

{% block main %}

  <main class="main">

    <!-- Page Title -->
    <div class="page-title dark-background">
        <div class="container position-relative">
            <h1>Actualité Beforyou</h1>
            <p>Restez informé des dernières nouveautés, projets, événements et réalisations de notre agence.</p>
            <nav class="breadcrumbs">
                <ol>
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="current">Blog</li>
                </ol>
            </nav>
        </div>

    </div><!-- End Page Title -->

    <!-- Blog Posts Section -->
    <section id="blog-posts" class="blog-posts section">

      <div class="container">
        <div class="row gy-4">

          {% for evenement in evenements %}

          <div class="col-lg-4">
            <article>

              <div class="post-img">
                <img src="{{ asset('upload/images/event/' ~ evenement.image) | imagine_filter('thumbnail_actuality') }}" alt="" class="img-fluid">
              </div>

              <p class="post-category">{{ evenement.theme }} <span><time datetime="">Jan 1, 2022</time></span></p>

              <h2 class="title">
                <a href="{{ path('app_notre_actualites_detail',{'slug':evenement.slug}) }}">{{ evenement.title }}</a>
              </h2>


            </article>
          </div>
          {% endfor %}


        </div>
      </div>

    </section><!-- /Blog Posts Section -->

    <!-- Blog Pagination Section
    <section id="blog-pagination" class="blog-pagination section">

      <div class="container">
        <div class="d-flex justify-content-center">
          <ul>
            <li><a href="#"><i class="bi bi-chevron-left"></i></a></li>
