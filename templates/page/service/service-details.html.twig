{% extends 'base.html.twig' %}

{% block header %}

    {% include 'navigation/header-on-page.html.twig' %}
{% endblock %}

{% block main %}

  <main class="main">

    <!-- Page Title -->
    <div class="page-title dark-background">
      <div class="container position-relative">
        <h1>{{ service }}</h1>
        <nav class="breadcrumbs">
          <ol>
            <li><a href="{{ path('app_home') }}">Home</a></li>
            <li class="current">Service {{ service }}</li>
          </ol>
        </nav>
      </div>
    </div><!-- End Page Title -->

    <!-- Service Details Section -->
    <section id="service-details" class="service-details section">

      <div class="container">

          <div class="row gy-5">

              <!-- Cette colonne doit passer EN DERNIER sur mobile, et en premier sur grand Ã©cran -->
              <div class="col-lg-4 order-2 order-lg-1" data-aos="fade-up" data-aos-delay="100">

                  <div class="help-box d-flex flex-column justify-content-center align-items-center text-center p-4 border rounded mb-4">
                      <i class="bi bi-headset help-icon mb-3" style="font-size: 2rem;"></i>
                      <h4>Avez-vous une question ?</h4>
                      <p class="d-flex align-items-center mt-2 mb-3">
                          <i class="bi bi-telephone me-2"></i>
                          <span>+241 74242612</span>
                      </p>

                      <a href="{{ path('app_demande_devis') }}" class="btn btn-view-more rounded-pill px-4 py-2 d-inline-flex align-items-center gap-2">
                          <i class="bi bi-file-earmark-text"></i> Demander un devis
                      </a>
                  </div>

                  <div class="service-box">
                      <h4>Autres Services</h4>
                      {% include autre_service_nav %}
                  </div>


              </div>


                  {% include service_contenu %}


          </div>


      </div>

    </section><!-- /Service Details Section -->

  </main>
{% endblock %}
